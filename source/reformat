SpacesInSquareBrackets: false
Standard:        Auto
TabWidth:        8
UseTab:          Never
...
EOF

# use the clang-format tool to reformat all the code base on this style
clang-format -style=file -i cmd/*.cpp cmd/*.h lib/*.cpp lib/*.h ide/*.cpp ide/*.h
rm .clang-format

